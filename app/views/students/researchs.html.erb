<h1>Research</h1>
<div class="d-grid gap-4" id="students-research">
  <% @researchs.each do |row| %>
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">
          <%= row["title"] %>
        </h5>
        <p class="card-text"><small class="text-muted">
            <%= row["name"] %>
          </small></p>
        <p class="card-text">
          <%= row["description"] %>
        </p>
      </div>
    </div>
  <% end %>
</div>
